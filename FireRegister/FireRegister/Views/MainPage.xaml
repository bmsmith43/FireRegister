<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:FireRegister.Views"
            xmlns:viewModels="clr-namespace:FireRegister.ViewModels"
            x:Class="FireRegister.Views.MainPage">
   <TabbedPage.Children>
      <views:SignInOutPage>
         <views:SignInOutPage.BindingContext>
            <viewModels:SignInOutViewModel />
         </views:SignInOutPage.BindingContext>
      </views:SignInOutPage>

      <views:FireRegisterPage>
         <views:FireRegisterPage.BindingContext>
            <viewModels:FireRegisterViewModel />
         </views:FireRegisterPage.BindingContext>
      </views:FireRegisterPage>

      <NavigationPage Title="About">
         <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource">
               <On Platform="iOS" Value="tab_about.png"/>
            </OnPlatform>
         </NavigationPage.Icon>
         <x:Arguments>
            <views:AboutPage />
         </x:Arguments>
      </NavigationPage>
   </TabbedPage.Children>
</TabbedPage>